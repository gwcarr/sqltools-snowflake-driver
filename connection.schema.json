{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "account": {
      "title": "Account",
      "type": "string",
      "minLength": 1
    },
    "database": {
      "title": "Database",
      "type": "string",
      "minLength": 1
    },
    "warehouse": {
      "title": "Warehouse",
      "type": "string",
      "minLength": 1
    },
    "authenticator": {
      "title": "Authenticator",
      "type": "string",
      "enum": [
        "SNOWFLAKE",
        "SNOWFLAKE_JWT",
        "EXTERNALBROWSER",
        "OAUTH",
        "https://vivint.okta.com"
      ],
      "enumNames": ["User & Password", "Key Pair", "Browser Based SSO", "OAuth", "https://vivint.okta.com"],
      "default": "SNOWFLAKE"
    },
    "username": {
      "title": "User",
      "type": "string",
      "minLength": 1
    },
    "ocspOptions": {
      "title": "OCSP Options",
      "type": "object",
      "properties": {
        "ocspFailOpen": {
          "title": "OCSP Fail-Open",
          "type": "boolean",
          "default": false
        }
      }
    },
    "snowflakeOptions": {
      "title": "Connection Options",
      "type": "object",
      "properties": {    
        "schema": {
          "title": "Schema",
          "type": "string",
          "minLength": 1
        },
        "role": {
          "title": "Role",
          "type": "string",
          "minLength": 1
        },
        "clientSessionKeepAlive": {
          "title": "Client Session Keep Alive",
          "type": "boolean",
          "default": true
        },
        "clientSessionKeepAliveHeartbeatFrequency": {
          "title": "Keep Alive Heartbeat Frequency",
          "type": "integer",
          "minimum": 900,
          "maximum": 3600, 
          "default": 3600
        }
      }
    }
  },
  "dependencies": {
    "authenticator": {
      "oneOf": [
        {
          "properties": {
            "authenticator": {
              "enum": ["SNOWFLAKE"]
            },
            "password": {
              "title": "Password",
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "password"
          ]
        },
        {
          "properties": {
            "authenticator": {
              "enum": ["SNOWFLAKE_JWT"]
            },
            "privateKeyPath": {
              "title": "Private Key File",
              "type": "string",
              "minLength": 1
            },
            "privateKeyPass": {
              "title": "Private Key Passphrase",
              "type": "string"
            }
          },
          "required": [
            "privateKeyPath"
          ]
        },
        {
          "properties": {
            "authenticator": {
              "enum": ["EXTERNALBROWSER"]
            }
          },
          "required": []
        },
        {
          "properties": {
            "authenticator": {
              "enum": ["OAUTH"]
            },
            "token": {
              "title": "OAuth Token",
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "token"
          ]
        },
        {
          "properties": {
            "authenticator": {
              "enum": ["https://vivint.okta.com"]
            },
            "password": {
              "title": "Password",
              "type": "string"
            }
          },
          "required": [
            "password"
          ]
        }
      ]
    }
  },
  "required": [
    "account",
    "warehouse",
    "authenticator",
    "username"
  ]
}